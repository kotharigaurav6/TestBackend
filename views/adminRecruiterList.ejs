<%- include('./adminHomeHeader.ejs')%>
<body>
    <br>
    <center>
        <h2>Recruiter List</h2>
    </center>
    <table width="100%" id="space" border="1" cellspacing="0" cellpadding="10">
        <caption>
            <center>
                <span style="font-size:20px;color:red">
                    <%=message%>
                </span>
            </center>
            <br>
        </caption>
        <thead>
            <th>S.No</th>
            <th>Name</th>
            <th>Recruiter Type</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Status</th>
            <th>AdminVerify</th>
            <th>EmailVerify</th>
        </thead>
        <tbody>
            <%recruiterList.forEach((recruiter,index)=>{%>
                 <tr>
                    <td><%=index+1%></td>
                    <td><%=recruiter.name%></td>
                    <td><%=recruiter.recruiter%></td>
                    <td><%=recruiter.email%></td>
                    <td><%=recruiter.contact%></td>
                    <td><%=recruiter.address%></td>
                    <td><%=recruiter.status%></td>
                    <td><a href="/admin/adminVerifyRecruiter?recruiterEmail=<%=recruiter.email%>"><%=recruiter.adminVerify%></a></td>
                    <td><%=recruiter.emailVerify%></td>
                </tr>   
            <%})%>
        </tbody>
    </table>
</body>